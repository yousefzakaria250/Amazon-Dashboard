    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    
</head>
<body>

   
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success !</strong>@TempData["AlertMessage"]
        </div>
    }
    <div class="log-w3">
        <div class="w3layouts-main" style="background:none" id="main">
            <h2> @localizer["Sign In To Admin Dashboard"] </h2>

            <form method="post" asp-action="SignIn" asp-controller="User">
 
                <span asp-validation-summary="ModelOnly" class="text-danger"></span>
        <div>
                <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <br />  
        <label asp-for="UserName"></label>
         @*<select class="s" asp-for="UserName"  asp-items="@ViewBag.UserName" >
                <option></option>
         </select>
*@
        @*   <input asp-for="UserName" type="text" class="container-fluid"/>
          <span asp-validation-for="UserName" class="text-danger"></span>*@

           <input asp-for="UserName" type="text" class="container-fluid form-control" style="border:1px solid #fc9b12" />
          <span asp-validation-for="UserName" class="text-black"></span>
         
    </div>         
              
    <br />
   <div class="mt-10 form-group">
        <label asp-for="Password"></label>
                    <input asp-for="Password" class="container-fluid form-control" style="border:1px solid #fc9b12" />
        <span asp-validation-for="Password" class="text-black" ></span>
        
    </div>
    <br />
    <div class="mx-10 form-group">
                <input type="hidden" asp-for="ReturnUrl" class="form-control"/>
                    <button class="btn btn-primary container-fluid"
                           style="background-color:#F3C448;" type="submit">@localizer["SignIn"]</button>
          </div>
            </form>
            <img class="w-20 mx-auto rounded d-flex" src="./Images/amazonblack.png">

        </div>
    </div>
    <script src="js/bootstrap.js"></script>
    <script src="js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="js/scripts.js"></script>
    <script src="js/jquery.slimscroll.js"></script>
    <script src="js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="js/flot-chart/excanvas.min.js"></script><![endif]-->
