@model OrderViewModel
<h1>@localizer["Add New Order"]</h1>
<div class="alert alert-success" role="alert" style="display:none" id="alert">
    <h4 class="alert-heading">@localizer["Well done"]</h4>
    <p>@localizer["sucAlertOrd"]</p>
    <hr>
    <p class="mb-0">
        <a asp-action="Index" asp-controller="Order">@localizer["Click Here"]</a>
        @localizer["for Details"]
    </p>
</div>
<div class="col-10 mx-auto">
    <div class="card shadow border-0">
        <div class="card-body">
           <div class="row">
        <form method="post" asp-controller="Order" asp-action="Add" enctype="multipart/form-data"
              data-ajax="true" data-ajax-complete="OrderAdded" data-ajax-loading="#loader">
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-select" aria-label="Default select example" asp-items="@ViewBag.Users">
                            <option selected>-- @localizer["Select Customer"] --</option>
                </select>
                <span asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-select" aria-label="Default select example" asp-items="@ViewBag.Products">
                    <option selected>--@localizer["Select Product"] --</option>
                </select>
                <span asp-validation-for="ProductId"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" >
                <span asp-validation-for="TotalPrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select" aria-label="Default select example">
                    <option selected>--@localizer["Select Type of Payment"] --</option>
                    <option value="visa">@localizer["Visa"]</option>
                    <option value="cash">@localizer["Cash"]</option>
                </select>
                <span asp-validation-for="Type"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select" aria-label="Default select example">
                    <option selected>--@localizer["Status"] --</option>
                    <option value="sent">@localizer["Sent"]</option>
                    <option value="delivered">@localizer["Delivered"]</option>
                </select>
                <span asp-validation-for="Type"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control">
                <span asp-validation-for="CreatedAt"></span>
            </div>
            <br />
            <div class="form-group">
                        <input type="submit" value="@localizer["Add"]" class="btn btn-info" />
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-info">@localizer["Back to List"]</a>
            </div>
        </form>
        </div>
    </div>
    </div>
    <div class="col-md-4" style="text-align:center; padding:100px">
        <img src="~/img/createLoader.gif" id="loader" style="width:200px;height:200px;display:none" />
    </div>
</div>
<script>
    function OrderAdded(data) {
        document.getElementById("alert").style.display = "block";
    }
</script>
