@model OrderDetails
<h3>Are you sure you want to delete this?</h3>
<div class="row col-md-4">
    <form method="post" asp-action="Delete" asp-controller="Order">
        <div class="form-group">
            <label asp-for="Id" class="control-label">Order Id</label>
            <input asp-for="Id" class="form-control" readonly value="@Model.Id" />
        </div>
        <div class="form-group">
            <label asp-for="UserId" class="control-label">Order for Customer</label>
            <input asp-for="UserId" name="bookTitle" class="form-control" readonly value="@Model.User.FirstName @Model.User.LastName" />
        </div>
        <div class="form-group">
            <label asp-for="TotalPrice" class="control-label">Total Price</label>
            <input asp-for="TotalPrice" name="bookTitle" class="form-control" readonly value="@Model.TotalPrice" />
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Order" class="btn btn-outline-info">Cancel</a>
    </form>
</div>
