 @model BrandModel

 <h1>@localizer["Add Brand"]</h1>

<div class="alert alert-success" role="alert" style="display:none;" id="Succses">
    This is a success alert with <a asp-controller="Brand" asp-action="Index" class="alert-link">Brands</a>. Give it a click if you like.
</div>
<p class="mb-0"><a class="btn d-inline-flex btn-sm btn-warning text-black mt-5 mx-1" asp-controller="Brand" asp-action="Index">Back to Brands</a>.</p>
<form data-ajax="true" data-ajax-complete="AlertDone" data-ajax-loading="#loader" method="post" asp-controller="Brand" asp-action="AddNewBrand" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="validation"></span>
    </div>

    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-select" aria-label="Default select example" asp-items="@ViewBag.Categories">
            <option selected>-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <input type="submit" value="@localizer["Add Brand"]" class="btn d-inline-flex btn-sm btn-warning text-black mt-5 mx-1" />
</form>
 

<script>
    function AlertDone(event) {
        document.getElementById("Succses").style.display = "block";
    }
 </script>